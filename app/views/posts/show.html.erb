<h1><%= @post.title %></h1>
<small><%= @post.created_at.strftime('%b %d. %Y') %></small>
<p><%= @post.body %></p>
<p>Category: <%= link_to @post.category.name, category_path(id: @post.category.id) %></p>
<%= link_to 'Edit Post', edit_post_path %> | <%= link_to 'Delete',
                                                         @post, data: { :confirm => 'Are you sure?' },
                                                         method: :delete %> | <%= link_to 'Back', posts_path %>